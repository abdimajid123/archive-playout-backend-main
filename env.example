# Laravel Application Configuration
APP_NAME="Archive Playout Backend"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC
APP_LOCALE=en

# Database Configuration (Local MySQL)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3307
DB_DATABASE=archive_playout
DB_USERNAME=root
DB_PASSWORD=

# Redis Configuration (Local Redis)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Cache Configuration
CACHE_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# File Storage Configuration (Local)
FILESYSTEM_DISK=local

# Email Configuration (Local - Mailtrap/Mailpit)
MAIL_MAILER=smtp
MAIL_HOST=127.0.0.1
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@localhost.com
MAIL_FROM_NAME="${APP_NAME}"

# Authentication & Security
SANCTUM_STATEFUL_DOMAINS=localhost:3000,localhost:8000,127.0.0.1:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_MAX_AGE=86400

# Logging Configuration
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_DEPRECATIONS_CHANNEL=null

# Backup Configuration (Disabled for local)
BACKUP_DISK=local
BACKUP_NOTIFICATIONS=false

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_MINUTES=1

# Security Headers (Disabled for local)
FORCE_HTTPS=false
SECURE_HEADERS=false

# Queue Configuration
QUEUE_FAILED_DRIVER=database
QUEUE_CONNECTION=sync

# Broadcasting
BROADCAST_DRIVER=log
CACHE_PREFIX=archive_playout_

# Application Specific
FRONTEND_URL=http://localhost:3000
API_VERSION=v1
MAINTENANCE_MODE=false

# Database Backup (Disabled for local)
DB_BACKUP_ENABLED=false
